{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: train.py",
            "type": "python",
            "python": "/root/miniconda3/envs/onnx/bin/python",
            "request": "launch",
            //program参数一定要放launch.py文件，
            "program": "/root/miniconda3/envs/onnx/lib/python3.8/site-packages/torch/distributed/launch.py",
            "args": [
                //命令行参数
                "--nproc_per_node=1",
                "--rdzv_endpoint=localhost:1002",
                //程序代码
                "train.py"
                //程序入参
            ],
            //环境变量
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}